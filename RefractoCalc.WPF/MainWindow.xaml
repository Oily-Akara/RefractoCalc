<Window x:Class="RefractoCalc.WPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:views="clr-namespace:RefractoCalc.WPF.Views"
        mc:Ignorable="d"
        Title="Optometry Suite" Height="600" Width="900">

    <Grid>
        <TabControl Margin="10">
            <!-- Tab 1: Vertex Distance -->
            <TabItem Header="Vertex Distance">
                <views:VertexDistanceView />
            </TabItem>

            <!-- Tab 2: Over Refraction (New!) -->
            <TabItem Header="CL Over-Refraction">
                <views:CLOverRefractionView />
            </TabItem>
            <!-- Tab 3: Prism Calculator -->
            <TabItem Header="Prism Calculator">
                <views:PrismCalculatorView />
            </TabItem>
            <!-- Tab 4: Visual Acuity Converter-->
            <TabItem Header="Visual Acuity Converter">
                <views:VisualAcuityView />
            </TabItem>
            <!-- Tab 5: ACD Estimation -->
            <TabItem Header="ACD Estimation">
                <views:ACDView />
            </TabItem>
        </TabControl>
    </Grid>
</Window>